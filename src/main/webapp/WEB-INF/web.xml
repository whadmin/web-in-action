<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>lifeCycleServlet</servlet-name>
        <servlet-class>com.wuhao.web.servletNorm.servlet.LifeCycleServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>genericServletSub</servlet-name>
        <servlet-class>com.wuhao.web.servletNorm.servlet.GenericServletSub</servlet-class>
        <init-param>
            <param-name>msg</param-name>
            <param-value>hello world</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>httpServletSub</servlet-name>
        <servlet-class>com.wuhao.web.servletNorm.servlet.HttpServletSub</servlet-class>
        <init-param>
            <param-name>msg</param-name>
            <param-value>hello world</param-value>
        </init-param>
    </servlet>

    <!-- servletContext 例子 -->
    <servlet>
        <servlet-name>servletContextGetInitParam</servlet-name>
        <servlet-class>com.wuhao.web.servletNorm.servlet.servletContext.ServletContextGetInitParam</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>servletContextRequestForward</servlet-name>
        <servlet-class>com.wuhao.web.servletNorm.servlet.servletContext.ServletContextRequestForward</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>servletContextSharedAttr1</servlet-name>
        <servlet-class>com.wuhao.web.servletNorm.servlet.servletContext.ServletContextSharedAttr1</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>servletContextSharedAttr2</servlet-name>
        <servlet-class>com.wuhao.web.servletNorm.servlet.servletContext.ServletContextSharedAttr2</servlet-class>
    </servlet>


    <!-- servletConfig 例子 -->
    <servlet>
        <servlet-name>servletConfig</servlet-name>
        <servlet-class>com.wuhao.web.servletNorm.servlet.servletConfig.ServletConfigServlet</servlet-class>
        <init-param>
            <param-name>msg</param-name>
            <param-value>hello world</param-value>
        </init-param>
    </servlet>

    <!-- servlet 配置 例子 -->
    <servlet>
        <servlet-name>configurationServletForXml</servlet-name>
        <servlet-class>com.wuhao.web.servletNorm.servlet.configuration.ConfigurationServletForXml</servlet-class>
        <init-param>
            <param-name>msg</param-name>
            <param-value>hello world</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- Servlet 多线程问题-->
    <servlet>
        <servlet-name>safeServlet1</servlet-name>
        <servlet-class>com.wuhao.web.servletNorm.servlet.thread.SafeServlet1</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>safeServlet2</servlet-name>
        <servlet-class>com.wuhao.web.servletNorm.servlet.thread.SafeServlet2</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>unSafeServlet</servlet-name>
        <servlet-class>com.wuhao.web.servletNorm.servlet.thread.UnSafeServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>


    <servlet-mapping>
        <servlet-name>lifeCycleServlet</servlet-name>
        <url-pattern>/lifeCycleServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>servletContextGetInitParam</servlet-name>
        <url-pattern>/servletContextGetInitParam</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>servletContextRequestForward</servlet-name>
        <url-pattern>/servletContextRequestForward</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>servletContextSharedAttr1</servlet-name>
        <url-pattern>/servletContextSharedAttr1</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>servletContextSharedAttr2</servlet-name>
        <url-pattern>/servletContextSharedAttr2</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>genericServletSub</servlet-name>
        <url-pattern>/genericServletSub</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>httpServletSub</servlet-name>
        <url-pattern>/httpServletSub</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>servletConfig</servlet-name>
        <url-pattern>/servletConfig</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>configurationServletForXml</servlet-name>
        <url-pattern>/configurationServletForXml</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>safeServlet1</servlet-name>
        <url-pattern>/safeServlet1</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>safeServlet2</servlet-name>
        <url-pattern>/safeServlet2</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>unSafeServlet</servlet-name>
        <url-pattern>/unSafeServlet</url-pattern>
    </servlet-mapping>
</web-app>
